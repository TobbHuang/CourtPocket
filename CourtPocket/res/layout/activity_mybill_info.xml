<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    tools:context="com.pazdarke.courtpocket1.activity.MybillInfoActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue" >

        <ImageView
            android:id="@+id/iv_mybillinfo_leftarrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/selector_drawable_leftarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_mybillinfo_courtlogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" >

                <TextView
                    android:id="@+id/tv_mybillinfo_gymname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成都足球场"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_mybillinfo_gymtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="场地类型：足球场"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textColor="@color/darkGrey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_mybillinfo_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥150"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_mybillinfo_generatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="下单时间：2015-05-07 14:00:00"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态："
                    android:textColor="@color/darkGrey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_mybillinfo_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付款"
                    android:textColor="@color/darkGrey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_mybillinfo"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_courtinfo_intro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="订单详情"
                        android:textColor="@color/darkGrey"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/ll_mybillinfo_smallbill1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_mybillinfo_courtname1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="足球场A"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_mybillinfo_smallbilltime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-05-09 14:00-15:00"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkstatus1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未验证  验证码"
                                android:textColor="@color/darkGrey"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkcode1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="123456"
                                android:textColor="@color/orange"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Button 
                        android:id="@+id/btn_mybillinfo_changecourt1"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_changecourt"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:text="改场" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/ll_mybillinfo_smallbill2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_mybillinfo_courtname2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="足球场A"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_mybillinfo_smallbilltime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-05-09 14:00-15:00"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkstatus2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未验证  验证码"
                                android:textColor="@color/darkGrey"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkcode2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="123456"
                                android:textColor="@color/orange"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Button 
                        android:id="@+id/btn_mybillinfo_changecourt2"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_changecourt"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:text="改场" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/ll_mybillinfo_smallbill3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_mybillinfo_courtname3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="足球场A"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_mybillinfo_smallbilltime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-05-09 14:00-15:00"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkstatus3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未验证  验证码"
                                android:textColor="@color/darkGrey"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkcode3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="123456"
                                android:textColor="@color/orange"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Button 
                        android:id="@+id/btn_mybillinfo_changecourt3"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_changecourt"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:text="改场" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/ll_mybillinfo_smallbill4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_mybillinfo_courtname4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="足球场A"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_mybillinfo_smallbilltime4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-05-09 14:00-15:00"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkstatus4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未验证  验证码"
                                android:textColor="@color/darkGrey"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_mybillinfo_checkcode4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="123456"
                                android:textColor="@color/orange"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                    
                    <Button 
                        android:id="@+id/btn_mybillinfo_changecourt4"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_changecourt"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:text="改场" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />
            </LinearLayout>
            
            <Button 
                android:id="@+id/btn_mybillinfo_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_drawable_yellow_orange"
                android:text="立即评价"
                android:textColor="@color/white" />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="13dp"
                android:textColor="@color/blue"
                android:layout_marginLeft="10dp"
                android:text="需要退款？请点击" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>