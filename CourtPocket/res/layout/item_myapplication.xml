<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_itemmyapplication_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/tv_itemmyapplication_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="43dp"
                android:text="电子科大足球队"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_itemmyapplication_teamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子科大足球队"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_itemmyapplication_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/tv_itemmyapplication_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已加入 "
                    android:textColor="@color/darkGrey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_itemmyapplication_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2015-05-18"
                    android:textColor="@color/darkGrey"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightGrey" />

</LinearLayout>