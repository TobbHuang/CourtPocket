<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:background="@drawable/ic_map_shape" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp" >
        
        <ImageView 
            android:id="@+id/iv_mapinfowindow_gymlogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="14dp"
            android:src="@color/lightGrey"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_mapinfowindow_gymname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:singleLine="true"
                android:text="成都体育场"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mapinfowindow_gymlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="成都市成都市成都市成都市成都市成都市成都市成都市成都市"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_mapinfowindow_gymprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="￥45"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_rightarrow_grey" />
    </LinearLayout>

</RelativeLayout>
