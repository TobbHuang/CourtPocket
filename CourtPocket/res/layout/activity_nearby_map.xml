<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pazdarke.courtpocket1.activity.NearbyMapActivity" >

    <com.amap.api.maps2d.MapView
        android:id="@+id/map_nearby_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" >
        
        <RelativeLayout 
            android:id="@+id/rl_map_leftarrow"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_map_back" >
            
            <ImageView 
                android:id="@+id/iv_map_leftarrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_leftarrow_white"
                android:layout_centerInParent="true" />
            
        </RelativeLayout>
        
        <TextView 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGrey" />
        
        <TextView 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        
        <Spinner
            android:id="@+id/sp_map_sports"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_map_spinner" />
        
    </LinearLayout>

</RelativeLayout>